    <%# <p class="notice"><%= notice %>
    <%# <p class="alert"><%= alert %>
    <%= render "shared/header" %>
    <main>
      <%= yield %>
    </main>
    <%= render "shared/footer" %>

    <%= javascript_include_tag "bootstrap.bundle.min.js" %>
    <%= javascript_include_tag "tiny-slider.js" %>
    <%= javascript_include_tag "aos.js" %>
    <%= javascript_include_tag "navbar.js" %>
    <%= javascript_include_tag "counter.js" %>
    <%= javascript_include_tag "glightbox.min.js" %>
    <%= javascript_include_tag "custom.js" %>
    
  </body>
</html>
