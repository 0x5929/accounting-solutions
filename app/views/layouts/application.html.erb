    <%= stylesheet_link_tag "template/css/fonts/icomoon/style.css" %>
    <%= stylesheet_link_tag "template/css/fonts/flaticon/font/flaticon.css" %>
    <%= stylesheet_link_tag "template/css/bootstrap" %>
    <%= stylesheet_link_tag "template/css/tiny-slider.css" %>
    <%= stylesheet_link_tag "template/css/glightbox.min.css" %>
